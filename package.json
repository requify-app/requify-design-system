{
	"name": "@requify/requify-design-system",
	"version": "0.5.1",
	"description": "A professional, customizable design system for Requify built with Svelte 5, Tailwind CSS, and bits-ui",
	"keywords": [
		"svelte",
		"sveltekit",
		"design-system",
		"ui-components",
		"tailwindcss",
		"bits-ui"
	],
	"homepage": "https://github.com/requify-app/requify-design-system#readme",
	"bugs": {
		"url": "https://github.com/requify-app/requify-design-system/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/requify-app/requify-design-system.git"
	},
	"license": "MIT",
	"author": "paul@requify.app",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/lib",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "vite dev",
		"build:lib": "svelte-package",
		"build:site": "vite build",
		"preview": "vite preview",
		"svelte-sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --threshold error --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --threshold error --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --experimental-cli --write .",
		"format-check": "prettier --experimental-cli --check .",
		"prepublishOnly": "bun run build:lib"
	},
	"dependencies": {
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"bits-ui": "^2.15.4",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"prettier": "3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
