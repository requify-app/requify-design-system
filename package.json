{
  "name": "requify-design-system",
  "version": "0.5.0",
  "description": "A professional, customizable design system for Requify built with Svelte 5, Tailwind CSS, and bits-ui",
  "keywords": [
    "svelte",
    "sveltekit",
    "design-system",
    "ui-components",
    "tailwindcss",
    "bits-ui"
  ],
  "license": "MIT",
  "type": "module",
  "svelte": "src/index.js",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts"
    },
    "./components": {
      "types": "./src/lib/components/ui/base/index.ts",
      "svelte": "./src/lib/components/ui/base/index.ts"
    }
  },
  "files": [
    "src",
    "static"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "svelte-sync": "svelte-kit sync",
    "check": "svelte-kit sync && svelte-check --threshold error --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --threshold error --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --experimental-cli --write .",
    "format-check": "prettier --experimental-cli --check ."
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "prettier": "3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@internationalized/date": "^3.6.0",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "@lucide/svelte": "^0.562.0"
  }
}
